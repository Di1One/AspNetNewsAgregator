@model ArticleModel
@{
    ViewData["Title"] = "EditArticle";
}

<div>
    <h1>Edit article</h1>

    @using(Html.BeginForm("Edit", "Article", FormMethod.Post))
    {
            <div>
                @Html.LabelFor(model => model.Title)
                @Html.TextBoxFor(model => model.Title)
            </div>
            <br/>
            <div>
                @Html.LabelFor(model => model.Category)
                @Html.TextBoxFor(model => model.Category)
            </div>
            <br/>
            <div>
                @Html.LabelFor(model => model.ShortSummary, new { @class="form-labael"})
                @Html.TextBoxFor(model => model.ShortSummary, new { @class="form-control", placeholder="Artilce short summary"})
            </div>
            <br/>
            <div>
                @Html.LabelFor(model => model.Text)
                @Html.TextAreaFor(model => model.Text)
            </div>
            <br/>
            <div>
                @Html.LabelFor(model => model.PublicationDate)
                @Html.TextBoxFor(model => model.PublicationDate, new {type="date"})
            </div>
            <br/>

            <button>Submit</button>
    }

   @* <form method="post" action="~/article/create">
    </form>*@
</div>
